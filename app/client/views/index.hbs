{{#extend "stylesheets"}}
<link rel="stylesheet" href="/css/index.css"/>
{{/extend}}

<div class="container">
    <form class="form-horizontal" id="login_form" action="./login" method="posts">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 col-xs-12 control-label">username</label>
            <div class="col-sm-10 col-xs-12">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-5 col-xs-12">
                <button type="submit" id="submit" class="btn btn-default btn-lg">Sign in</button>
            </div>
        </div>
    </form>
</div>

{{#extend "scripts"}}
<script>
    $(function(){
        $("#submit").on("click", function () {
            $("#login_form").submit();
        })
    });
</script>
{{/extend}}
